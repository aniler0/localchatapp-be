{
  "version": "2.0.2",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["es5", "es6"],
    "skipLibCheck": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./dist", "./node_modules"]
}
